{
  "name": "Popzis",
  "version": "1.0",
  "description": "Make medias popup from your window",
  "permissions":    [
    "webNavigation","declarativeContent", "storage","contextMenus","activeTab","*://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "page_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/Popzis16.png",
        "32": "images/Popzis32.png",
        "48": "images/Popzis48.png",
        "128": "images/Popzis128.png"
      }
    },
    "icons": {
      "16": "images/Popzis16.png",
      "32": "images/Popzis32.png",
      "48": "images/Popzis48.png",
      "128": "images/Popzis128.png"
    },

  "manifest_version": 2
}
